<div class="users-container">
  <div class="user-rows">
    <%= image_tag('profile.jpg', :alt => 'user', :width => '100px', :height => '100px') %>
    <div class="user-info">
      <h2><%= @user.name %></h2>
      <p>Number of posts: <%= @user.posts_counter%></p>
    </div>
  </div>
  <div class="user-bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>
  <% @user.recent_posts.each  do |post| %>
    <% if @user.id === post.author_id %>
      <div class="post-container">
        <div class="user-posts-container">
          <div class="each-post">
            <%= link_to user_post_path(@user.id, post.id) do %>
              <h4><%=post.title%></h4>
            <% end %>
            <p><%=post.text%><p>
            <div class="post-left">
              <p class="post-left">Comments: <%=post.comments_counter%> | Likes: <%=post.likes_counter%> </p>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
  <div class="see-all-btn">
    <button type="button"> <%= link_to 'See all posts', user_posts_path(@user) %></button>
  </div>
</div